<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <include layout="@layout/toolbar" />
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:weightSum="1">


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <Space
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight=".25" />

        <ImageButton
          android:id="@+id/prod_image"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_weight=".5"
          android:adjustViewBounds="true"
          android:scaleType="fitCenter"
          android:src="@drawable/placeholder" />

      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="+ Add Photo"
        android:textAlignment="center" />

      <Spinner
        android:id="@+id/productType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp" />

      <android.support.design.widget.TextInputLayout
        android:id="@+id/productBrandFloat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">

        <EditText
          android:id="@+id/productBrand"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Product Brand"
          android:text="Canon" />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:id="@+id/productModelNumberFloat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">

        <EditText
          android:id="@+id/productModelNumber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Product Model Number" />

      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:id="@+id/rent1DayFloat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">

        <EditText
          android:id="@+id/rent1Day"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Rent (1 Day)"
          android:inputType="number" />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:id="@+id/rent3DayFloat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">

        <EditText
          android:id="@+id/rent3Day"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Rent (3 Days)"
          android:inputType="number" />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:id="@+id/rent5DayFloat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">

        <EditText
          android:id="@+id/rent5Day"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Rent(5 Days)"
          android:inputType="number" />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:id="@+id/salePriceFloat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">

        <EditText
          android:id="@+id/salePrice"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Sale Price"
          android:inputType="number" />
      </android.support.design.widget.TextInputLayout>

      <Button
        android:id="@+id/addProductButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="1.39"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Add Another Product" />

    </LinearLayout>
  </ScrollView>
</LinearLayout>



